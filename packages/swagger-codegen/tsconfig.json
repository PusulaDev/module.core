{
    "compilerOptions": {
        "target": "es2015",
        "module": "esNext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}